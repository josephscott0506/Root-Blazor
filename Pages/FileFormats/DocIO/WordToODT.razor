@page "/docio/word-to-odt"
@inject Microsoft.JSInterop.IJSRuntime JS
@using System.IO
@using Microsoft.AspNetCore.Http
@using Syncfusion.Blazor.Buttons
@using blazor_samples.Data.FileFormats.DocIO
@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnvironment
<div class="control-section">
    <p style="font-weight:normal">Click the button to view the resultant ODT document generated by Essential DocIO.</p>
    <div class="button-section">
        <div id="button-control">
            <div class="row">
                <div>
                    <SfButton @onclick="ViewTemplate">View Template</SfButton>&nbsp;
                    <SfButton @onclick="ConvertToODT">Convert to ODT</SfButton>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .control-section .row {
        margin: 10px 0;
    }
</style>

@code {
    MemoryStream documentStream;

    /// <summary>
    /// Create and download the simple Word document
    /// </summary>
    public async Task ConvertToODT(MouseEventArgs args)
    {
        WordToODTService service = new WordToODTService(hostingEnvironment);
        documentStream = service.WordToODT("Generate Document");
        await JS.SaveAs("WordToODT.odt", documentStream.ToArray());
    }
    /// <summary>
    /// Create and download the template Word document
    /// </summary>
    public async Task ViewTemplate(MouseEventArgs args)
    {
        WordToODTService service = new WordToODTService(hostingEnvironment);
        documentStream = service.WordToODT("View Template");
        await JS.SaveAs("Word to ODT.docx", documentStream.ToArray());
    }
}