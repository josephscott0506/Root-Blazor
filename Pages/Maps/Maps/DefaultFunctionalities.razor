                                        <div>North</div><div>America</div>
                                    </div>
                                }
                            </MarkerTemplate>
                        </MapsMarker>
                        <MapsMarker Visible="true" DataSource="@SouthAmericaDatasource" AnimationDuration="0">
                            <MarkerTemplate>
                                @{
                                    var data = context as IDataTemplate;
                                    <div style="margin-left:0px;margin-top:10px;font-size: 12px;color: white;text-shadow: 0px 1px 1px black;font-weight: 500">
                                        <div>South</div><div>America</div>
                                    </div>
                                }
                            </MarkerTemplate>
                        </MapsMarker>
                    </MapsMarkerSettings>
                    <MapsShapeSettings ColorValuePath="color"></MapsShapeSettings>
                </MapsLayer>
            </MapsLayers>
            <MapsZoomSettings Enable='false'></MapsZoomSettings>
            <MapsLegendSettings Visible='true'></MapsLegendSettings>
            <MapsTitleSettings Text="YouTube office locations">
                <MapsTitleTextStyle Size="16px"></MapsTitleTextStyle>
            </MapsTitleSettings>
        </SfMaps>
    </div>
    <div style="float: right; margin-right: 10px;">
        Source:
        <a href="https://craft.co/youtube/locations" target="_blank">craft.co/youtube/locations</a>
    </div>
</div>

