@page "/chart/trendlines"
@using Syncfusion.Blazor.Charts
@inject NavigationManager NavigationManager
@inherits SampleBaseComponent;

<div class="control-section">
    <SfChart Title="Historical Indian Rupee Rate (INR USD)" >
     <ChartEvents Load="ChartLoad"/>
        <ChartArea><ChartAreaBorder Width="0"></ChartAreaBorder></ChartArea>
        <ChartPrimaryXAxis LabelFormat="yyyy" ValueType="Syncfusion.Blazor.Charts.ValueType.DateTime" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
        </ChartPrimaryXAxis>
        <ChartPrimaryYAxis Title="Rupees against Dollars">
            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
        </ChartPrimaryYAxis>
        <ChartSeriesCollection>
            <ChartSeries DataSource="@ChartData" Name="Rupees" XName="xValue" YName="yValue" Type="ChartSeriesType.Spline">
                <ChartMarker Visible="true">
                </ChartMarker>
                <ChartTrendlines>
                    <ChartTrendline Type="TrendlineTypes.Linear" Width="3" Name="Trends" Fill="#C64A75">
                    </ChartTrendline>
                </ChartTrendlines>
            </ChartSeries>
        </ChartSeriesCollection>
    </SfChart>
</div>

@code{
  public class TrendlineData
    {
        public DateTime xValue { get; set; }
        public double yValue { get; set; }
    }

    public List<TrendlineData> ChartData = new List<TrendlineData>
    {
        new TrendlineData { xValue = new DateTime(2000, 2, 11), yValue = 14 },
        new TrendlineData { xValue = new DateTime(2001, 9, 4), yValue = 20 },
        new TrendlineData { xValue = new DateTime(2002, 2, 11), yValue = 25 },
        new TrendlineData { xValue = new DateTime(2003, 9, 16), yValue = 21 },
        new TrendlineData { xValue = new DateTime(2004, 2, 7), yValue = 13},
        new TrendlineData { xValue = new DateTime(2005, 9, 7), yValue = 18 },
        new TrendlineData { xValue = new DateTime(2006, 2, 11), yValue = 24 },
        new TrendlineData { xValue = new DateTime(2007, 9, 14), yValue = 23 },
        new TrendlineData { xValue = new DateTime(2008, 2, 6), yValue = 19 },
        new TrendlineData { xValue = new DateTime(2009, 9, 6), yValue = 31 },
        new TrendlineData { xValue = new DateTime(2010, 2, 11), yValue = 39},
        new TrendlineData { xValue = new DateTime(2011, 9, 11), yValue = 50 },
        new TrendlineData { xValue = new DateTime(2012, 2, 11), yValue = 24 },
    };
string CurrentUri;
    void ChartLoad(ILoadedEventArgs Args)
    {
        CurrentUri = NavigationManager.Uri;
        if (CurrentUri.IndexOf("material") > -1)
        {
            Args.Theme = ChartTheme.Material;
        }
        else if (CurrentUri.IndexOf("fabric") > -1)
        {
            Args.Theme = ChartTheme.Fabric;
        }
        else if (CurrentUri.IndexOf("bootstrap4") > -1)
        {
            Args.Theme = ChartTheme.Bootstrap4;
        }
        else if (CurrentUri.IndexOf("bootstrap") > -1)
        {
            Args.Theme = ChartTheme.Bootstrap;
        }
        else if (CurrentUri.IndexOf("highcontrast") > -1)
        {
            Args.Theme = ChartTheme.HighContrast;
        }
        else
        {
            Args.Theme = ChartTheme.Bootstrap4;
        }
    }

}
