@page "/pdf-viewer/right-to-left"

@using Syncfusion.Blazor
@using Syncfusion.Blazor.PdfViewerServer

@inherits SampleBaseComponent;

<div class="control-section">
    <SfPdfViewerServer DocumentPath="@DocumentPath" Height="640px" Width="100%" EnableRtl="true" Locale="ar-AE"></SfPdfViewerServer>
</div>

@code {
    private string DocumentPath { get; set; } = "wwwroot/data/RTLText.pdf";

    [Inject]
    protected IJSRuntime JsRuntime { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        this.JsRuntime.Sf().LoadLocaleData("wwwroot/locale.json");
    }
}