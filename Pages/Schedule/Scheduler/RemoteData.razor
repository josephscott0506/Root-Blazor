@page "/scheduler/remote-data"

@using Syncfusion.Blazor.Schedule
@using Syncfusion.Blazor.Data
@inherits SampleBaseComponent;

<div class="col-lg-12 control-section">
    <div class="schedule-wrapper">
        <SfSchedule TValue="ScheduleData.AppointmentData" Width="100%" Height="650px" SelectedDate="@(new DateTime(2017, 6, 5))" Readonly="true">
            <ScheduleEventSettings TValue="ScheduleData.AppointmentData">
                <SfDataManager Url="https://js.syncfusion.com/demos/ejservices/api/Schedule/LoadData" Adaptor="@Syncfusion.Blazor.Adaptors.WebApiAdaptor"></SfDataManager>
            </ScheduleEventSettings>
        </SfSchedule>
    </div>
</div>
